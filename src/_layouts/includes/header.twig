	<div>
		<div>
			<h2 id="site-title">{{ sitename }}</h2>
			<nav id="site-nav">
        {% for link in data.navigation %}
          {% if slug == link.slug[1:] %}
					<span>
            <a href="{{link.slug}}" class="active">
              <h1>{{link.label}}</h1>
            </a>
					</span>
          {% else %}
            <a href="{{link.slug}}">
              {{link.label}}
            </a>
          {% endif %}
        {% endfor %}
			</nav>
